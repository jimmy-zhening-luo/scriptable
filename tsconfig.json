{
  "extends": "./tsconfig-project.json",
  "include": [
    "src/**/*",
    "tests/**/*",
    "typings/**/*",
  ],
  "references": [
    {
      "path": "src/tsconfig.json",
    },
    {
      "path": "tests/tsconfig.json",
    },
    {
      "path": "typings/tsconfig.json",
    },
  ],
  "compilerOptions": {
    "rootDir": "src",
    "declarationDir": "types",
    "outDir": "dist",
    "tsBuildInfoFile": "types/project.tsbuildinfo",
  },
}
